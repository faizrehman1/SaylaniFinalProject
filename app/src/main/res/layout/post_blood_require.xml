<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:padding="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Blood Group:"
            android:textSize="20dp" />

        <Spinner
            android:id="@+id/BloodGroup"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_margin="5dp"
            android:entries="@array/Blood_Groups" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="No of units required:"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/Numberofunits"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:inputType="number"
             />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Urgency:"

            android:textSize="20dp" />

        <Spinner
            android:id="@+id/Urgency"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_margin="5dp"
            android:entries="@array/Urgency" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Country:"
            android:textSize="20dp" />

        <Spinner
            android:id="@+id/Country"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:entries="@array/Country" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="State"

            android:textSize="20dp" />

        <Spinner
            android:id="@+id/State"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_margin="5dp"
            android:entries="@array/State" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="City"
            android:textSize="20dp" />

        <Spinner
            android:id="@+id/City"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_margin="5dp"

            android:entries="@array/City" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Hospital"

            android:textSize="20dp" />

        <Spinner
            android:id="@+id/Hospital"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_margin="5dp"
            android:entries="@array/Hospitals" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Your Relation with patient"

            android:textSize="20dp" />

        <Spinner
            android:id="@+id/Relation"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_margin="5dp"
            android:entries="@array/Relationship" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Contact No."

            android:textSize="20dp" />

        <EditText
            android:id="@+id/contact"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contact" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Additional instruction"

            android:textSize="20dp" />

        <EditText
            android:id="@+id/Instruction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Call me When you Reach Hospital"
            android:inputType="textMultiLine"
            />

        <Button
            android:id="@+id/subbmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submitt" />

    </LinearLayout>
</ScrollView>